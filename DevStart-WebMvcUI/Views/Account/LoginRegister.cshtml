@model LoginRegisterViewModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Login/Register</title>
	<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css'>
	<link rel="stylesheet" href="~/css/style.css">
</head>
<body>
	<div class="container" id="container">
		@if (TempData["message"] != null)
		{
			<div class="alert alert-success">
				@TempData["message"]
			</div>
		}
		<div class="form-container sign-up-container">
			<form asp-action="Register" asp-controller="Account" method="post">
				<h1>Create Account</h1>
				<input asp-for="RegisterViewModel.FirstName" placeholder="First Name" required />
				<input asp-for="RegisterViewModel.LastName" placeholder="Last Name" required />
				<input asp-for="RegisterViewModel.UserName" placeholder="User Name" required />
				<input asp-for="RegisterViewModel.PhoneNumber" placeholder="Phone Number" required />
				<input asp-for="RegisterViewModel.Email" placeholder="Email" required />
				<input asp-for="RegisterViewModel.Password" type="password" placeholder="Password" required />
				<input asp-for="RegisterViewModel.ConfirmPassword" type="password" placeholder="Confirm Password" required />
				<button type="submit">Sign Up</button>
			</form>
		</div>
		<div class="form-container sign-in-container">
			@if (TempData["Message"] != null)
			{
				<div class="alert alert-success">
					@TempData["Message"]
				</div>
			}
			<form asp-action="Login" asp-controller="Account" method="post">
				<h1>Sign in</h1>
				<input asp-for="LoginViewModel.Email" placeholder="Email" required />
				<input asp-for="LoginViewModel.Password" type="password" placeholder="Password" required />
				<input type="hidden" name="ReturnUrl" value="@(Model.LoginViewModel?.ReturnUrl ?? Context.Request.Query["ReturnUrl"].ToString())" />
				<button type="submit">Sign In</button>
			</form>
		</div>
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-left">
					<h1>Welcome Back!</h1>
					<p>To keep connected with us please login with your personal info</p>
					<button class="ghost" id="signIn">Sign In</button>
				</div>
				<div class="overlay-panel overlay-right">
					<h1>Hello, Friend!</h1>
					<p>Enter your personal details and start journey with us</p>
					<button class="ghost" id="signUp">Sign Up</button>
				</div>
			</div>
		</div>
	</div>
	<script src="~/js/script.js"></script>
</body>
</html>

